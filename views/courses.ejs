<div class="row">
    <div class="col-md-12">
      <br>
      <h2>Courses</h2>
      <hr />
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Course Code</th>
              <th>Course Description</th>
            </tr>
          </thead>
          <tbody>
            <% if (courses) { %>
              <% courses.forEach((course) => { %>
                <tr>
                  <td>
                    <a href="/course/<%= course.courseId %>">
                      <%= course.courseCode %>
                    </a>
                  </td>
                  <td>
                    <a href="/students?course=<%= course.courseId %>">
                      <%= course.courseDescription %>
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="2" class="text-center">
                  <%= message %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12 text-center">
      <% if (!courses) { %>
        <strong><%= message %></strong>
      <% } %>
    </div>
  </div>
  