<!DOCTYPE html>
<html>
  <head>
    <title>Students - WEB700</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/css/theme.css">
  </head>
  <body>
    <div class="row">
      <div class="col-md-12">
        <br>
        <h2>
          Students
          <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
        </h2>
        <hr />
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Student Num</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Status</th>
                <th>Course ID</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if (students && students.length > 0) { %>
                <% students.forEach((student) => { %>
                  <tr>
                    <td><%= student.studentNum %></td>
                    <td>
                      <a href="/student/<%= student.studentNum %>">
                        <%= student.firstName %> <%= student.lastName %>
                      </a>
                    </td>
                    <td>
                      <a href="mailto:<%= student.email %>"><%= student.email %></a>
                    </td>
                    <td><%= student.address %></td>
                    <td><%= student.status %></td>
                    <td>
                      <a href="/students?course=<%= student.course %>"><%= student.course %></a>
                    </td>
                    <td>
                      <a href="/students/delete/<%= student.studentNum %>" class="btn btn-danger">remove</a>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12 text-center">
        <% if (!students || students.length === 0) { %>
          <strong><%= message %></strong>
        <% } %>
      </div>
    </div>
  </body>
</html>
